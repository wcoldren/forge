<config>
    <executableName>${app.executable}</executableName>
    <mainClass>${app.mainclass}</mainClass>
    <os>ios</os>
    <arch>arm64</arch>
    <target>ios</target>

    <resources>
        <resource>
            <directory>../forge-gui/res</directory>
            <targetPath>res</targetPath>
            <includes>
                <include>**/*</include>
            </includes>
            <skipPngCrush>true</skipPngCrush>
        </resource>
    </resources>

    <frameworks>
        <framework>UIKit</framework>
        <framework>OpenGLES</framework>
        <framework>QuartzCore</framework>
        <framework>CoreGraphics</framework>
        <framework>OpenAL</framework>
        <framework>AudioToolbox</framework>
        <framework>AVFoundation</framework>
        <framework>Metal</framework>
        <framework>MetalKit</framework>
        <framework>GLKit</framework>
    </frameworks>

    <weakFrameworks>
        <framework>GameController</framework>
    </weakFrameworks>

    <libs>
        <lib>z</lib>
        <lib>c++</lib>
    </libs>

    <forceLinkClasses>
        <pattern>com.badlogic.gdx.backends.iosrobovm.IOSGLES20</pattern>
        <pattern>com.badlogic.gdx.graphics.g2d.**</pattern>
        <pattern>com.badlogic.gdx.graphics.g3d.**</pattern>
        <pattern>com.badlogic.gdx.graphics.glutils.**</pattern>
        <pattern>com.badlogic.gdx.scenes.scene2d.**</pattern>
    </forceLinkClasses>

    <frameworkPaths>
        <path>libs</path>
    </frameworkPaths>

    <iosInfoPList>resources/Info.plist.xml</iosInfoPList>
</config>